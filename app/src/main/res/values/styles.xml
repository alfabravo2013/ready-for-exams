<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="HeaderText">
        <item name="android:fontFamily">@font/montserrat_bold</item>
        <item name="android:textColor">@color/font_black</item>
        <item name="android:textSize">@dimen/text_xlarge</item>
    </style>
    <style name="ButtonPrimary">
        <item name="android:background">@drawable/background_blue_rounded_corner</item>
        <item name="fontFamily">@font/montserrat</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/text_large</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="TextInputLayoutLogin" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:textColorHint">@color/font_black</item>
        <item name="boxStrokeWidth">2dp</item>
    </style>
    <style name="TextInputLayoutCreate" parent="TextInputLayoutLogin">
        <item name="android:background">@color/light_gray</item>
    </style>
    <style name="EditTextLogin">
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textSize">@dimen/text_large</item>
    </style>
    <style name="EditTextCreate" parent="EditTextLogin">
        <item name="android:fontFamily">@font/montserrat</item>
    </style>
    <style name="EmptyListText">
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/text_large</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/font_gray</item>
    </style>
    <style name="ChecklistNameText">
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/text_large</item>
        <item name="android:textColor">@color/blue</item>
    </style>
    <style name="ChecklistTaskCounterText">
        <item name="android:fontFamily">@font/open_sans_light</item>
        <item name="android:textSize">@dimen/text_base</item>
        <item name="android:textColor">@color/blue</item>
    </style>
</resources>
