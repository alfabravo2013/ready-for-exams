<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/margin_base"
    app:cardBackgroundColor="@color/light_bluish_gray"
    app:cardCornerRadius="16dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_large">

        <TextView
            android:id="@+id/home_checklist_item_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            style="@style/HeaderText"
            android:fontFamily="@font/montserrat"
            android:textStyle="bold"
            android:textSize="@dimen/text_large"
            android:textColor="@color/blue"
            tools:text="Mathematics Exam"/>

        <TextView
            android:id="@+id/home_checklist_item_tasks_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_med"
            android:textColor="@color/blue"
            android:textSize="@dimen/text_base"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/home_checklist_item_name"
            tools:text="3 / 7"/>

        <ImageView
            android:id="@+id/home_checklist_item_status_icon"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:scaleType="centerInside"
            app:layout_constraintDimensionRatio="W,1"
            app:layout_constraintStart_toEndOf="@id/home_checklist_item_tasks_count"
            app:layout_constraintTop_toTopOf="@id/home_checklist_item_tasks_count"
            app:layout_constraintBottom_toBottomOf="@id/home_checklist_item_tasks_count"
            android:layout_marginStart="@dimen/margin_xlarge"
            android:src="@drawable/default_tab_dot"
            android:contentDescription="@string/home_checklist_completion_icon_description"
            tools:tint="@color/teal_700" />

        <TextView
            android:id="@+id/home_checklist_item_status_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/teal_700"
            android:textSize="@dimen/text_base"
            android:layout_marginStart="@dimen/margin_base"
            app:layout_constraintStart_toEndOf="@id/home_checklist_item_status_icon"
            app:layout_constraintBaseline_toBaselineOf="@id/home_checklist_item_tasks_count"
            tools:text="In progress"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>